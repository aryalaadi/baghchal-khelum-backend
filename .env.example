# ===========================================
# Bagchal Khelum Backend - Environment Config
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===== Required Variables =====
# Strong secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your-super-secret-key-change-this

# PostgreSQL password
POSTGRES_PASSWORD=your-secure-postgres-password

# Redis password
REDIS_PASSWORD=your-secure-redis-password

# ===== Optional Variables (with defaults) =====
# Environment: production or development
ENVIRONMENT=production

# PostgreSQL settings
POSTGRES_USER=postgres
POSTGRES_DB=bagchal

# Backend settings
BACKEND_PORT=8000
GUNICORN_WORKERS=4
LOG_LEVEL=info

# JWT settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# Database connection retry settings
DB_MAX_RETRIES=30
DB_RETRY_INTERVAL=2

# Docker image tag
TAG=latest

# ===========================================
# LOCAL DEVELOPMENT ONLY (without Docker)
# ===========================================
# Uncomment and set these if running the app directly (not via docker-compose)
# Docker Compose builds these automatically from the variables above
#
# DATABASE_URL=postgresql://postgres:your-secure-postgres-password@localhost:5432/bagchal
# REDIS_URL=redis://:your-secure-redis-password@localhost:6379
